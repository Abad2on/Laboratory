//---------------------------------------------------------------------------
#include <vcl.h>
#pragma hdrstop
#include <stdio.h>
#include <conio.h>
#include <math.h>
//---------------------------------------------------------------------------
int main()
{
   int a[10]={3,4,9,5,8,2,1,3,2,6};
   int i,min=a[0],ind;
   printf("\n");
   printf ("Array A:\n\n");
   for(i=0; i<10; i++) {
      printf(" %i",a[i]);
      if(min > a[i]) {
         min=a[i];
         ind=i;
      }
   }
   printf("\n");
   printf ("Array to A minimum:\n\n");
   for(i=0; i<ind; i++) {
      printf(" %i",a[i]);
   }
   printf("\n");
   return 0;
}
//-------------------------------------------------------------------------
